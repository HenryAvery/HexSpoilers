<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Menu</p>
            <div class="list-group">
                <li class="list-group-item">Next Card</li>
                <li class="list-group-item">Previous Card</li>
                <li class="list-group-item">Back to gallery</li>
            </div>
        </div>
        <div class="col-md-5 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <h1 class="text-center"><%= card.name %></h1>
            <div class="thumbnail">
                <img class="img-rounded img-fluid" src="<%= card.image %>">
                <div class="caption-full">
                    <p><%= card.description %></p>
                    <a class="btn btn-warning" href="/cards/<%= card._id %>/edit">Edit</a>
                    <form class="delete-form" action="/cards/<%= card._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/cards/<%= card._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% card.comments.forEach( (comment) => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <a class="btn btn-xs btn-warning" href="/cards/<%=card._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/cards/<%=card._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>