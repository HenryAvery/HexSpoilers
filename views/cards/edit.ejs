<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form-container">
            <h1 class="form-title">Edit : <%= card.name %></h1>
                <form action="/cards/<%= card._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="card[name]" value="<%= card.name %>">
                    </div>
                    <div class="form-group ">
                        <label for="image">Image Url</label>
                        <input class="form-control" type="text" name="card[image]" value="<%= card.image %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Description/Impressions</label>
                        <input class="form-control" type="text" name="card[description]" value="<%= card.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>            
                </form>
            <a href="/cards">Go Back</a>
        </div>
    </div>
</div>