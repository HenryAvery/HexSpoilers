<% include ../partials/header %>
    
<div class="container">
    <header class="jumbotron">
        <div class="container text-center">
            <h1>Hex Spoilers</h1>
            <p class="hidden-xs">Check out the spoiled cards from the upcoming set!</p>
            <a class="btn btn-orange btn-lg newcard" href="/cards/new">Add New Card</a>
        </div>
    </header>
    
    <div class="row text-center">
        <% if (pages && pages > 0) { %>
            <ul class="pagination text-center">
                <% if (current == 1) { %>
                    <li class="disabled"><a>First</a></li>
                <% } else { %>
                    <li><a href="/cards">First</a></li>
                <% } %>
         
                <% if (current == 1) { %>
                    <li class="disabled"><a>«</a></li>
                <% } else { %>
                    <li><a href="/cards?page=<%= Number(current) - 1 %>">«</a></li>
                <% } %>
         
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                <li class="active"><a><%= i %></a></li>
                <% } else { %>
                    <li><a href="/cards?page=<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
                <% } %>
         
                <% if (current == pages) { %>
                    <li class="disabled"><a>»</a></li>
                <% } else { %>
                    <li><a href="/cards?page=<%= Number(current) + 1 %>">»</a></li>
                <% } %>
         
                <% if (current == pages) { %>
                    <li class="disabled"><a>Last</a></li>
                <% } else { %>
                    <li><a href="/cards?page=<%= pages %>">Last</a></li>
                <% } %>
            </ul>
        <% } %>
    </div>
    <div class="row flex">
        <% cards.forEach((card) => { %>
           <div class="col-lg-2 col-md-3 col-sm-4 col-sm-offset-0 col-xs-10 col-xs-offset-1">
                <a href="/cards/<%= card._id %>">
                    <div class="thumbnail">
                        <img src="<%= card.image %>">
                        <div class="caption">
                            <h4 class="text-center"><%= card.name %></h4>  
                        </div>
                    </div>
                 </a>
            </div>
        <% }) %>
    </div>
</div>


<% include ../partials/footer %>