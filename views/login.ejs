<% include ./partials/header %>
    <div class="row">
        <div class="form-container">
            <h1 class="form-title">Login Page</h1>
            <form action="/login" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                        	<span class="glyphicon glyphicon-user"></span> 
                        </div>
                        <input class="form-control"  autofocus="autofocus" type="text" name="username" pattern=".{3,16}" placeholder="username">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                        	<span class="glyphicon glyphicon-lock"></span> 
                        </div>
                        <input class="form-control" type="password" name="password" placeholder="password" pattern=".{5,20}" title="5 to 20 characters">
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-orange btn-block">Login</button>
                </div>
            </form>
            <p>Don't have an account yet? <a href="/register" >Register here!</a></p>
        </div>
    </div>
<% include ./partials/footer %>