<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form-container">
            <h1 class="form-title">Add new comment to: <%= card.name %></h1>
                <form action="/cards/<%= card.id %>/comments" method="POST">
                    <div class="form-group">
                        <label for="name">Comment</label>
                        <textarea class="form-control" rows ="5" placeholder="Your comment here..." name="comment[text]"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>            
                </form>
            <a href="/cards">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>