<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form-container">
            <h1 class="form-title">Edit Comment</h1>
                <form action="/cards/<%= card_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Comment</label>
                        <textarea class="form-control" rows ="5" name="comment[text]"><%=comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>            
                </form>
            <a href="/cards">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>